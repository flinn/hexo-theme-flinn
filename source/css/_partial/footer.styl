#footer
  background: gunmetal //color-footer-background
  margin-top: 60px
  color: color-grey
  line-height: line-height
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  .copyright
    color: snow
  .credit
    padding: 30px
  #back-to-top
    cursor: pointer
    background: lime
    color: snow    
    overflow: hidden
    text-align: center
    width: 60px
    height: 30px
    display: block
    margin: 0 auto -30px
    border-top: 1px dotted lime
    border-radius: 0 0 3px 3px
    box-shadow: 0 1px 1px rgba(0,0,0,0.1)
    &:hover
      text-shadow: 0px -10px snow
      i
        margin-top: 5px
    i      
      font-size: 38px
      padding-left: 17px
      padding-right: 17px
      padding-bottom: 5px
  .logo
    width: logo-width * 0.8
    height: logo-height * 0.8
    background-size: logo-width * 0.8 logo-height * 0.8