@import "nib"
@import "_variables"
@import "_extend"

global-reset()

@import "_terminalify"
@import "_bios"
@import "_animation"

em
  font-style: italic

body
  background: url(bg-image) no-repeat
  background-attachment: fixed
  background-position: center
  background-size: cover
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.hidden 
  display: none !important;

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

#intro
  color: White

#intro a 
  color: lightpurp
  text-decoration: none

#intro strong
  font-weight: bold
  color: burnt
  font-size: 18px

.group
  padding: 40px 40px
  background-color: rgba(0,0,0,0.4) 

#intro h1
  font-family: 'Strait', Calibri, sans-serif
  font-size: 44px
  margin-bottom: 10px;

.byhand
  font: 38px 'Reenie Beanie', cursive  

#terminal
  font: 16px 'Droid Sans Mono', monospace !important

.left 
    float: left
    width: 45%

.right 
    float: right
    width: 45%

img 
  max-width: 100%
  height: auto
  top: 0px !important

img.responsive
  width: 100%

.group:after 
    content:""
    display: table
    clear: both

.group p 
  padding: 10px 0px 5px 0px
  font-weight: normal


@media screen and (max-width: 750px) 
    .left, .right 
      float: none
      width: auto
    .right 
      margin-top: 20px


#body-container
  margin-top: 80px;

#welcome-container
  padding-top: 40px;

.container
  position: relative
  padding: 0 container-padding

.container-inner
  clearfix()
  max-width: container-inner-max-width
  min-width: container-inner-min-width
  width: 100%
  margin: 0 auto

.alignleft
  float: left

.alignright
  float: right

.clear
  clear: both  

.small-logo
  position: relative
  margin-top: 5px
  padding: 0px 15px
  left: 15px
  float: left
  display: block
  width: 44px
  height: 40px
  background: url(logo-img) 0px 0px no-repeat
  background-size: 44px 40px

.logo
  display: block
  padding: 10px 0
  width: logo-width
  height: logo-height
  background: url(logo-img) 0px 10px no-repeat
  background-size: logo-width logo-height
    
.main-body
  margin-top: - nav-height
  background-color: color-main-background

.main-body-inner
  clearfix()
  padding-left: sidebar-width
  box-sizing: border-box
  box-shadow: rgba(0, 0, 0, 0.0980392) 0px 1px 1px 0px
  background: url(images/s-left.png) repeat-y left 0

#main
  float: right
  width: 100%
  box-sizing: border-box
  min-height: 600px
  .main-body-header
    background: #fff
    position: relative
    padding: 18px 30px 17px
    border-bottom: 1px solid #eee
    color: #666
    font-size: 16px
    font-weight: 600
    text-transform: uppercase
    line-height: 24px
    .page-title-link, i
      margin-right: 8px
    em, a
      @extend $block-caption
  .main-body-content
    clearfix()

@import "_partial/header"
@import "_partial/nav"
@import "_partial/sidebar"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/assets"
@import "_partial/nprogress"
@import "_retina"
@import "_responsive"