// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Background 
bg-image = "images/rough.jpg"

// Bios
bios-img = "images/bios_vector.svg"
bios-width = 117px
bios-height = 125px

// Header
logo-img = "images/logo_graph.png"
logo-width = 110px
logo-height = 100px

// Flinn Colors
snow = #FFFFFF
lime = #91e022
purp = #6D43C3
burnt = #FF5722
gunmetal = #333
biosfur = #212121
lightpurp = #8a69cf

color-nav-background = purp
color-sidebar-top-background = burnt

// Default Colors
color-default = #555
color-grey = #aaa
color-border = #ddd
color-link = #8A69CF
